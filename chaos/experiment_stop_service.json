{
    "version": "1.0.0",
    "title": "Service Interruption Experiment",
    "description": "Stop the FastAPI container temporarily",
    "steady-state-hypothesis": {
        "title": "Nginx still reachable",
        "probes": [
            {
                "type": "probe",
                "name": "check-nginx-health",
                "tolerance": 200,
                "provider": {
                    "type": "process",
                    "path": "curl",
                    "arguments": "-s -o /dev/null -w '%{http_code}' http://nginx"
                }
            }
        ]
    },
    "method": [
        {
            "type": "action",
            "name": "stop-fastapi-container",
            "provider": {
                "type": "process",
                "path": "docker",
                "arguments": "stop fastapi-demo"
            },
            "pauses": {
                "after": 30
            }
        },
        {
            "type": "action",
            "name": "start-fastapi-container",
            "provider": {
                "type": "process",
                "path": "docker",
                "arguments": "start fastapi-demo"
            }
        }
    ]
}