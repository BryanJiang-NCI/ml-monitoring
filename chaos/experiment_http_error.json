{
    "version": "1.0.0",
    "title": "HTTP Error Burst Experiment",
    "description": "Generate 500 errors continuously",
    "steady-state-hypothesis": {
        "title": "Service handles requests gracefully",
        "probes": [
            {
                "type": "probe",
                "name": "check-nginx-health",
                "tolerance": 200,
                "provider": {
                    "type": "http",
                    "url": "http://127.0.0.1:8088"
                }
            }
        ]
    },
    "method": [
        {
            "type": "action",
            "name": "error-burst",
            "provider": {
                "type": "process",
                "path": "bash",
                "arguments": "-c 'for i in {1..100}; do curl -s http://127.0.0.1:8000/error > /dev/null; done'"
            }
        }
    ]
}